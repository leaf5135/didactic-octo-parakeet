<div class="min-h-screen bg-gray-50">
  <%= render 'shared/navigation' %>

  <!-- Main Content -->
  <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <!-- Page header -->
    <div class="px-4 py-6 sm:px-0">
      <div class="border-b border-gray-200 pb-5">
        <h3 class="text-lg leading-6 font-medium text-gray-900">
          Welcome back, <%= current_user.first_name %>!
        </h3>
        <p class="mt-2 max-w-4xl text-sm text-gray-500">
          Your role:
          <% current_user.roles.each_with_index do |role, index| %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
              <%= role.name.capitalize %>
            </span>
            <%= ", " if index < current_user.roles.count - 1 %>
          <% end %>
        </p>
      </div>
    </div>

    <!-- Stats -->
    <div class="px-4 py-6 sm:px-0">
      <dl class="mt-5 grid grid-cols-1 gap-5 sm:grid-cols-3">
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <dt class="text-sm font-medium text-gray-500 truncate">
              Total Users
            </dt>
            <dd class="mt-1 text-3xl font-semibold text-indigo-600">
              <%= @users_count %>
            </dd>
            <div class="mt-3">
              <%= link_to "Manage Users →", users_path,
                  class: "text-sm font-medium text-indigo-600 hover:text-indigo-500",
                  "tool-name" => "dashboard-view-users",
                  "tool-description" => "Navigate to users management page" %>
            </div>
          </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <dt class="text-sm font-medium text-gray-500 truncate">
              Total Roles
            </dt>
            <dd class="mt-1 text-3xl font-semibold text-green-600">
              <%= @roles_count %>
            </dd>
            <div class="mt-3">
              <%= link_to "Manage Roles →", roles_path,
                  class: "text-sm font-medium text-green-600 hover:text-green-500",
                  "tool-name" => "dashboard-view-roles",
                  "tool-description" => "Navigate to roles management page" %>
            </div>
          </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <dt class="text-sm font-medium text-gray-500 truncate">
              Total Permissions
            </dt>
            <dd class="mt-1 text-3xl font-semibold text-yellow-600">
              <%= @permissions_count %>
            </dd>
            <div class="mt-3">
              <%= link_to "Manage Permissions →", permissions_path,
                  class: "text-sm font-medium text-yellow-600 hover:text-yellow-500",
                  "tool-name" => "dashboard-view-permissions",
                  "tool-description" => "Navigate to permissions management page" %>
            </div>
          </div>
        </div>
      </dl>
    </div>

    <!-- Quick Actions -->
    <div class="px-4 py-6 sm:px-0">
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg font-medium leading-6 text-gray-900 mb-4">Quick Actions</h3>
          <div class="grid grid-cols-1 gap-4 sm:grid-cols-3">
            <% if current_user.has_permission?('users', 'create') %>
              <%= link_to new_user_path,
                  class: "inline-flex items-center justify-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
                  "tool-name" => "dashboard-quick-add-user",
                  "tool-description" => "Quick action to create new user" do %>
                <svg class="mr-2 -ml-1 h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                </svg>
                Create New User
              <% end %>
            <% end %>

            <% if current_user.has_permission?('roles', 'create') %>
              <%= link_to new_role_path,
                  class: "inline-flex items-center justify-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500",
                  "tool-name" => "dashboard-quick-add-role",
                  "tool-description" => "Quick action to create new role" do %>
                <svg class="mr-2 -ml-1 h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                Create New Role
              <% end %>
            <% end %>

            <% if current_user.has_permission?('permissions', 'create') %>
              <%= link_to new_permission_path,
                  class: "inline-flex items-center justify-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-yellow-600 hover:bg-yellow-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500",
                  "tool-name" => "dashboard-quick-add-permission",
                  "tool-description" => "Quick action to create new permission" do %>
                <svg class="mr-2 -ml-1 h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                </svg>
                Create New Permission
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Activity (placeholder) -->
    <div class="px-4 py-6 sm:px-0">
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg font-medium leading-6 text-gray-900 mb-4">Recent Activity</h3>
          <div class="text-sm text-gray-500">
            <p>No recent activity to display.</p>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>