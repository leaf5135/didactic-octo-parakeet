<div id="<%= dom_id permission %>" class="border-t border-border">
  <dl>
    <div class="bg-muted/50 px-6 py-5 sm:grid sm:grid-cols-3 sm:gap-4">
      <dt class="text-sm font-medium text-muted-foreground">Resource</dt>
      <dd class="mt-1 text-sm sm:mt-0 sm:col-span-2">
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-500/10 text-yellow-700">
          <%= permission.resource %>
        </span>
      </dd>
    </div>
    <div class="bg-background px-6 py-5 sm:grid sm:grid-cols-3 sm:gap-4">
      <dt class="text-sm font-medium text-muted-foreground">Action</dt>
      <dd class="mt-1 text-sm sm:mt-0 sm:col-span-2">
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-500/10 text-purple-700">
          <%= permission.action %>
        </span>
      </dd>
    </div>
    <div class="bg-muted/50 px-6 py-5 sm:grid sm:grid-cols-3 sm:gap-4">
      <dt class="text-sm font-medium text-muted-foreground">Description</dt>
      <dd class="mt-1 text-sm sm:mt-0 sm:col-span-2">
        <%= permission.description || "No description provided" %>
      </dd>
    </div>
    <div class="bg-background px-6 py-5 sm:grid sm:grid-cols-3 sm:gap-4">
      <dt class="text-sm font-medium text-muted-foreground">Assigned to Roles</dt>
      <dd class="mt-1 text-sm sm:mt-0 sm:col-span-2">
        <% permission.roles.each do |role| %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary/10 text-primary mr-2">
            <%= role.name.capitalize %>
          </span>
        <% end %>
        <% if permission.roles.empty? %>
          <span class="text-muted-foreground">Not assigned to any roles</span>
        <% end %>
      </dd>
    </div>
  </dl>
</div>
