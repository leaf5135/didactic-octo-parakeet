<div class="min-h-screen bg-background">
  <%= render 'shared/navigation' %>

  <main class="container mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <!-- Page header -->
    <div class="px-4 sm:px-0">
      <div class="sm:flex sm:items-center">
        <div class="sm:flex-auto">
          <h1 class="text-3xl font-bold tracking-tight">Permissions</h1>
          <p class="mt-2 text-sm text-muted-foreground">Define what actions can be performed on system resources.</p>
        </div>
        <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
          <% if current_user.has_permission?('permissions', 'create') %>
            <%= link_to "Add permission", new_permission_path,
                class: "inline-flex items-center justify-center rounded-md bg-primary px-4 py-2 text-sm font-medium text-primary-foreground shadow-sm hover:bg-primary/90 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50",
                "tool-name" => "navigate-to-add-permission",
                "tool-description" => "Navigate to permission creation form where you can access the create-permission tool to add a new permission with resource, action, and description" %>
          <% end %>
        </div>
      </div>

      <!-- Search form -->
      <div class="mt-4">
        <%= form_with url: permissions_path, method: :get,
            html: { "tool-name" => "search-permissions",
                    "tool-description" => "Search and filter permissions list" } do |form| %>
          <div class="flex gap-2">
            <%= form.text_field :search,
                value: params[:search],
                placeholder: "Search by resource or action...",
                class: "flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50",
                "tool-param-description" => "Search query to filter permissions by resource or action" %>
            <%= form.submit "Search",
                class: "inline-flex items-center justify-center rounded-md bg-primary px-4 py-2 text-sm font-medium text-primary-foreground shadow-sm hover:bg-primary/90 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2" %>
          </div>
        <% end %>
      </div>

      <% if notice %>
        <div class="mt-4 rounded-lg border border-green-500/50 bg-green-500/10 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-green-600" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-green-600"><%= notice %></p>
            </div>
          </div>
        </div>
      <% end %>

      <div class="mt-8 flex flex-col">
        <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
          <div class="inline-block min-w-full py-2 align-middle px-4 sm:px-6 lg:px-8">
            <div class="rounded-lg border bg-card text-card-foreground shadow-sm">
              <table class="min-w-full divide-y divide-border">
                <thead class="bg-muted/50">
                  <tr>
                    <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold sm:pl-6">Resource</th>
                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold">Action</th>
                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold">Description</th>
                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold">Assigned to Roles</th>
                    <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                      <span class="sr-only">Actions</span>
                    </th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-border bg-background">
                  <% @permissions.each do |permission| %>
                    <tr>
                      <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm sm:pl-6">
                        <div class="font-medium">
                          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-500/10 text-yellow-700">
                            <%= permission.resource %>
                          </span>
                        </div>
                      </td>
                      <td class="whitespace-nowrap px-3 py-4 text-sm text-muted-foreground">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-500/10 text-purple-700">
                          <%= permission.action %>
                        </span>
                      </td>
                      <td class="px-3 py-4 text-sm text-muted-foreground">
                        <%= permission.description || "No description" %>
                      </td>
                      <td class="px-3 py-4 text-sm text-muted-foreground">
                        <% permission.roles.each do |role| %>
                          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary/10 text-primary mr-1">
                            <%= role.name.capitalize %>
                          </span>
                        <% end %>
                        <% if permission.roles.empty? %>
                          <span class="text-muted-foreground">Not assigned</span>
                        <% end %>
                      </td>
                      <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                        <%= link_to "View", permission, class: "text-primary hover:text-primary/80 mr-3",
                            "tool-name" => "navigate-to-permission-#{permission.id}",
                            "tool-description" => "Navigate to view details for #{permission.resource}:#{permission.action} permission where you can see its description and role assignments" %>
                        <% if current_user.has_permission?('permissions', 'update') %>
                          <%= link_to "Edit", edit_permission_path(permission), class: "text-primary hover:text-primary/80 mr-3",
                              "tool-name" => "navigate-to-edit-permission-#{permission.id}",
                              "tool-description" => "Navigate to edit form for #{permission.resource}:#{permission.action} where you can access the update-permission-#{permission.id} tool to modify its resource, action, and description" %>
                        <% end %>
                        <% if current_user.has_permission?('permissions', 'destroy') %>
                          <%= link_to "Delete", permission, method: :delete,
                              data: { confirm: "Are you sure?" },
                              class: "text-destructive hover:text-destructive/80",
                              "tool-name" => "delete-permission-#{permission.id}",
                              "tool-description" => "Delete permission #{permission.resource}:#{permission.action}" %>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>