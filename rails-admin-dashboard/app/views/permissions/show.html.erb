<div class="min-h-screen bg-background">
  <%= render 'shared/navigation' %>

  <main class="container mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <div class="px-4 sm:px-0">
      <% if notice %>
        <div class="mb-4 rounded-lg border border-green-200 bg-green-50 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-green-700"><%= notice %></p>
            </div>
          </div>
        </div>
      <% end %>

      <div class="rounded-lg border bg-card text-card-foreground shadow-sm">
        <div class="px-6 py-5 border-b border-border">
          <h3 class="text-lg font-semibold leading-6">Permission Details</h3>
          <p class="mt-1 max-w-2xl text-sm text-muted-foreground">Resource access configuration.</p>
        </div>

        <%= render @permission %>

        <div class="bg-muted/50 px-6 py-4 flex justify-between">
          <div>
            <%= link_to "← Back to permissions", permissions_path,
                class: "text-sm font-medium text-muted-foreground hover:text-foreground",
                "tool-name" => "navigate-to-permissions",
                "tool-description" => "Navigate back to permissions list" %>
          </div>
          <div class="flex space-x-3">
            <% if current_user.has_permission?('permissions', 'update') %>
              <%= link_to "Edit", edit_permission_path(@permission),
                  class: "inline-flex items-center px-4 py-2 rounded-md border border-input bg-background text-sm font-medium shadow-sm hover:bg-accent hover:text-accent-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2",
                  "tool-name" => "navigate-to-edit-permission-#{@permission.id}",
                  "tool-description" => "Navigate to edit form for #{@permission.resource}:#{@permission.action}" %>
            <% end %>
            <% if current_user.has_permission?('permissions', 'destroy') %>
              <%= button_to "Delete", @permission, method: :delete,
                  data: { confirm: "Are you sure you want to delete this permission?" },
                  class: "inline-flex items-center px-4 py-2 rounded-md bg-destructive text-destructive-foreground text-sm font-medium shadow-sm hover:bg-destructive/90 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2",
                  "tool-name" => "delete-permission-#{@permission.id}",
                  "tool-description" => "Delete permission #{@permission.resource}:#{@permission.action}" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>
