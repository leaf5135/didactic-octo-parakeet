<div class="min-h-screen bg-background">
  <%= render 'shared/navigation' %>

  <main class="container mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <!-- Page header -->
    <div class="px-4 sm:px-0">
      <div class="sm:flex sm:items-center">
        <div class="sm:flex-auto">
          <h1 class="text-3xl font-bold tracking-tight">Roles</h1>
          <p class="mt-2 text-sm text-muted-foreground">Manage system roles and their associated permissions.</p>
        </div>
        <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
          <% if current_user.has_permission?('roles', 'create') %>
            <%= link_to "Add role", new_role_path,
                class: "inline-flex items-center justify-center rounded-md bg-primary px-4 py-2 text-sm font-medium text-primary-foreground shadow-sm hover:bg-primary/90 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50",
                "tool-name" => "navigate-to-add-role",
                "tool-description" => "Navigate to role creation form where you can access the create-role tool to add a new role with name, description, and permission assignments" %>
          <% end %>
        </div>
      </div>

      <!-- Search form -->
      <div class="mt-4">
        <%= form_with url: roles_path, method: :get,
            html: { "tool-name" => "search-roles",
                    "tool-description" => "Search and filter roles list" } do |form| %>
          <div class="flex gap-2">
            <%= form.text_field :search,
                value: params[:search],
                placeholder: "Search by role name or description...",
                class: "flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50",
                "tool-param-description" => "Search query to filter roles by name or description" %>
            <%= form.submit "Search",
                class: "inline-flex items-center justify-center rounded-md bg-primary px-4 py-2 text-sm font-medium text-primary-foreground shadow-sm hover:bg-primary/90 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2" %>
          </div>
        <% end %>
      </div>

      <% if notice %>
        <div class="mt-4 rounded-lg border border-green-500/50 bg-green-500/10 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-green-600" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-green-600"><%= notice %></p>
            </div>
          </div>
        </div>
      <% end %>

      <div class="mt-8 flex flex-col">
        <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
          <div class="inline-block min-w-full py-2 align-middle px-4 sm:px-6 lg:px-8">
            <div class="rounded-lg border bg-card text-card-foreground shadow-sm">
              <table class="min-w-full divide-y divide-border">
                <thead class="bg-muted/50">
                  <tr>
                    <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold sm:pl-6">Name</th>
                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold">Description</th>
                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold">Permissions</th>
                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold">Users</th>
                    <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                      <span class="sr-only">Actions</span>
                    </th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-border bg-background">
                  <% @roles.each do |role| %>
                    <tr>
                      <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm sm:pl-6">
                        <div class="font-medium"><%= role.name.capitalize %></div>
                      </td>
                      <td class="px-3 py-4 text-sm text-muted-foreground">
                        <%= role.description || "No description" %>
                      </td>
                      <td class="px-3 py-4 text-sm text-muted-foreground">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary/10 text-primary">
                          <%= role.permissions.count %> permissions
                        </span>
                      </td>
                      <td class="px-3 py-4 text-sm text-muted-foreground">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-500/10 text-green-600">
                          <%= role.users.count %> users
                        </span>
                      </td>
                      <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                        <%= link_to "View", role, class: "text-primary hover:text-primary/80 mr-3",
                            "tool-name" => "navigate-to-role-#{role.id}",
                            "tool-description" => "Navigate to view details for #{role.name} role where you can see its description and assigned permissions" %>
                        <% if current_user.has_permission?('roles', 'update') %>
                          <%= link_to "Edit", edit_role_path(role), class: "text-primary hover:text-primary/80 mr-3",
                              "tool-name" => "navigate-to-edit-role-#{role.id}",
                              "tool-description" => "Navigate to edit form for #{role.name} role where you can access the update-role-#{role.id} tool to modify its name, description, and permissions" %>
                        <% end %>
                        <% if current_user.has_permission?('roles', 'destroy') %>
                          <%= link_to "Delete", role, method: :delete,
                              data: { confirm: "Are you sure?" },
                              class: "text-destructive hover:text-destructive/80",
                              "tool-name" => "delete-role-#{role.id}",
                              "tool-description" => "Delete role #{role.name}" %>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>