<div class="min-h-screen bg-gray-50">
  <%= render 'shared/navigation' %>

  <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <!-- Page header -->
    <div class="px-4 sm:px-0">
      <div class="sm:flex sm:items-center">
        <div class="sm:flex-auto">
          <h1 class="text-2xl font-semibold text-gray-900">Roles</h1>
          <p class="mt-2 text-sm text-gray-700">Manage system roles and their associated permissions.</p>
        </div>
        <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
          <% if current_user.has_permission?('roles', 'create') %>
            <%= link_to "Add role", new_role_path,
                class: "inline-flex items-center justify-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 sm:w-auto",
                "tool-name" => "add-role",
                "tool-description" => "Navigate to add new role form" %>
          <% end %>
        </div>
      </div>

      <% if notice %>
        <div class="mt-4 rounded-md bg-green-50 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-green-800"><%= notice %></p>
            </div>
          </div>
        </div>
      <% end %>

      <div class="mt-8 flex flex-col">
        <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
          <div class="inline-block min-w-full py-2 align-middle px-4 sm:px-6 lg:px-8">
            <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
              <table class="min-w-full divide-y divide-gray-300">
                <thead class="bg-gray-50">
                  <tr>
                    <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Name</th>
                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Description</th>
                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Permissions</th>
                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Users</th>
                    <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                      <span class="sr-only">Actions</span>
                    </th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 bg-white">
                  <% @roles.each do |role| %>
                    <tr>
                      <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm sm:pl-6">
                        <div class="font-medium text-gray-900"><%= role.name.capitalize %></div>
                      </td>
                      <td class="px-3 py-4 text-sm text-gray-500">
                        <%= role.description || "No description" %>
                      </td>
                      <td class="px-3 py-4 text-sm text-gray-500">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                          <%= role.permissions.count %> permissions
                        </span>
                      </td>
                      <td class="px-3 py-4 text-sm text-gray-500">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                          <%= role.users.count %> users
                        </span>
                      </td>
                      <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                        <%= link_to "View", role, class: "text-indigo-600 hover:text-indigo-900 mr-3",
                            "tool-name" => "view-role-#{role.id}",
                            "tool-description" => "View details for role #{role.name}" %>
                        <% if current_user.has_permission?('roles', 'update') %>
                          <%= link_to "Edit", edit_role_path(role), class: "text-indigo-600 hover:text-indigo-900 mr-3",
                              "tool-name" => "edit-role-#{role.id}",
                              "tool-description" => "Navigate to edit form for role #{role.name}" %>
                        <% end %>
                        <% if current_user.has_permission?('roles', 'destroy') %>
                          <%= link_to "Delete", role, method: :delete,
                              data: { confirm: "Are you sure?" },
                              class: "text-red-600 hover:text-red-900",
                              "tool-name" => "delete-role-#{role.id}",
                              "tool-description" => "Delete role #{role.name}" %>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>